<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_below_menu_ic"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_del"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统设置"
        android:layout_centerVertical="true"
        android:textSize="@dimen/setting_textsize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_expand_hint"
        android:layout_toLeftOf="@+id/iv_btn_expand_pressed"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/setting_textsize"
        android:maxEms="8"
        android:visibility="gone"
        android:ellipsize="end"
        />

    <ImageView
        android:id="@+id/iv_btn_expand_pressed"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content" />

</RelativeLayout>