<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_order_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dip"
    android:background="@color/white"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="@dimen/margin5"
        android:layout_marginTop="@dimen/margin5"
        android:background="@color/color_line"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="45dp">
    <TextView
        android:textColor="@color/text_color"
        android:text="订单编号："
        android:gravity="center"
        android:textSize="@dimen/text_size_medium1"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:textColor="@color/text_color"
        android:paddingRight="@dimen/margin5"
        android:textSize="@dimen/text_size_medium1"
        android:gravity="right|center_vertical"
        android:id="@+id/id_order_num"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="5555"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="@dimen/margin5"
        android:layout_marginTop="@dimen/margin5"
        android:background="@color/color_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textColor="@color/text_color"
            android:text="下单日期："
            android:textSize="@dimen/text_size_medium1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/text_color"
            android:id="@+id/id_order_date"
            android:paddingRight="@dimen/margin5"
            android:textSize="@dimen/text_size_medium1"
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1111"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="@dimen/margin5"
        android:layout_marginTop="@dimen/margin5"
        android:background="@color/color_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textColor="@color/text_color"
            android:text="状态："
            android:textSize="@dimen/text_size_medium1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/text_color"
            android:id="@+id/id_order_status"
            android:textSize="@dimen/text_size_medium1"
            android:paddingRight="@dimen/margin5"
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="222222"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="@dimen/margin5"
        android:layout_marginTop="@dimen/margin5"
        android:background="@color/color_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textColor="@color/text_color"
            android:text="金价："
            android:layout_marginLeft="@dimen/margin10"
            android:gravity="center"
            android:textSize="@dimen/text_size_medium1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/text_color"
            android:id="@+id/id_order_goodprice"
            android:paddingRight="@dimen/margin5"
            android:textSize="@dimen/text_size_medium1"
            android:layout_width="match_parent"
            android:gravity="right|center_vertical"
            android:layout_height="match_parent"
            android:text="11111"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>